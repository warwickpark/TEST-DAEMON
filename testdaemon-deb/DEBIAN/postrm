#!/bin/bash
# postrm script for testdaemon

set -e

case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Reload systemd daemon after removal
        systemctl daemon-reload

        # If purging, remove configuration files
        if [ "$1" = "purge" ]; then
            rm -rf /etc/testdaemon
            echo "testdaemon configuration files removed."
        fi
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
